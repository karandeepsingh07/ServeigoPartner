<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="This is notification heading"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textView_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="This is notification headingThis is notification headingThis is notification heading"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="20/11/2020"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
    <View android:id="@+id/separator3"
        android:background="#000000"
        android:layout_width = "match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/linearLayout"/>
</RelativeLayout>